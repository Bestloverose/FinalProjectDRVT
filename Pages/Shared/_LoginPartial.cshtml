@using FinalProject.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<FinalProjectUser> SignInManager
@inject UserManager<FinalProjectUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-3">
            <span class="nav-link text-dark">Hello! @User.Identity?.Name!</span>
        </li>

        <li class="nav-item">
            <form class="form-inline d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {

    }
</ul>

