@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div class="container custom-container">
    <div class="row justify-content-center align-items-center">
        <!-- ข้อความด้านซ้าย -->
        <div class="col-md-5 custom-left">
            <h1 class="display-4 fw-bold">Welcome Back!</h1>
            <p class="lead">Log in to your account and explore amazing features. If you don’t have an account, you can register now!</p>
        </div>

        <!-- ฟอร์มด้านขวา -->
        <div class="col-md-5 custom-right">
            <div class="card form-container">
                <div class="card-body">
                    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Username Input -->
                        <div class="mb-3 form-floating">
                            <input asp-for="Input.UserName"
                                   class="form-control input-custom"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="Username" />
                            <label for="Input_UserName">Username</label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3 form-floating">
                            <input asp-for="Input.Password"
                                   class="form-control input-custom"
                                   type="password"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="Password" />
                            <label for="Input_Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                            <p style="margin-top: 20px; margin-bottom: 10px; margin-left: 15px; margin-right: 15px;">Or</p>
                            <button type="button" class="btn" onclick="window.location.href='/Identity/Account/Register'">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
